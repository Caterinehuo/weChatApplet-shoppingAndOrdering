/* pages/my/myFee/myFee.wxss */
.page {
  padding: 5px;
  box-sizing: border-box;
  font-size: 13px;
}
.nav {
  border: 1px solid #c3baba;
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: #fff;
}
.nav-block {
  width: 24.5%;
  height: 5vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #c3baba;
}
.hover-color {
  color: #e7b980;
  background-color: #e5560c;
}
.fee-block {
  width: 100%;
  background-color: #eae8e8;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 5%;
  border-radius: 3%;
}
.fee-content {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.fee-content-left {
  width: 25%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
}
.font-style-top {
  width: 100%;
  font-weight: bold;
  color: #e5560c;
  font-size: 28px;
}
.font-style-bottom {
  width: 100%;
  font-size: 13px;
  color: #736363;
}
.fee-content-width {
  width: 50%;
  border-right: 3px dotted #fff;
}
.fee-content-use {
  background-color: #e5560c;
  width: 50px;
  padding-left: 10px;
  border-radius: 11px;
  color: #fff;
}
.fee-range {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #736363;
  font-size: 12px;
}
.leftTop, .rightTop, .leftBottom, .rightBottom {
  width: 5%;
  height: 15px;
}
.leftTop {
  background:radial-gradient(30px at left bottom,transparent 50%,#EAE8E8 50%);
}
.rightTop {
  background:radial-gradient(30px at right bottom,transparent 50%,#EAE8E8 50%);
}
.leftBottom {
  background:radial-gradient(30px at left top,transparent 50%,#EAE8E8 50%);
}
.rightBottom {
  background:radial-gradient(30px at right top,transparent 50%,#EAE8E8 50%);
}
.not-fee {
  background-color: #dad8d8;
  color: #fff;
}
.not-fee .leftTop {
  background:radial-gradient(30px at left bottom,transparent 50%,#dad8d8 50%);
}
.not-fee .rightTop {
  background:radial-gradient(30px at right bottom,transparent 50%,#dad8d8 50%);
}
.not-fee .leftBottom {
  background:radial-gradient(30px at left top,transparent 50%,#dad8d8 50%);
}
.not-fee .rightBottom {
  background:radial-gradient(30px at right top,transparent 50%,#dad8d8 50%);
}
.not-fee .font-style-top,
.not-fee .font-style-bottom,
.not-fee .fee-content-width,
.not-fee .fee-range {
  width: 100%;
  color: #fff;
}
.not-fee .fee-content-left {
  font-size: 20px;
}